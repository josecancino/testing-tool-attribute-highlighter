{
  "manifest_version": 3,
  "name": "Attribute Highlighter Jove",
  "version": "1.0",
  "description": "Resalta y muestra data-attributes al pasar el mouse sobre elementos.",
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}