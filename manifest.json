{
  "manifest_version": 3,
  "name": "Testing Tool - Attribute Highlighter",
  "version": "1.1.0",
  "description": "Highlight attributes for Testing analysis",
  
  "permissions": ["storage"],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/contentEntry.js"],
      "css": ["styles/theme.css", "styles/panel.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "src/content/contentEntry.js",
        "src/ui/panel.js",
        "src/state/state.js",
        "src/core/position.js",
        "src/core/elementContextInfo.js",
        "src/core/panelChanges.js",
        "styles/*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
